{% extends 'components/base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/formulaireGenerique.css') }}">
	<link rel="stylesheet" href="{{ asset('css/boutonsEtInputs.css') }}">
		<link rel="stylesheet" href="{{ asset('css/messagesEtAlertes.css') }}">
{% endblock %}
{% block title %}
	{{ SiteName }}: Réinitialiser mon mot de passe
{% endblock %}

{% block body %}
	<div class="wrapper">
		{% for flashError in app.flashes('reset_password_error') %}
			<div class="" role="alert">{{ flashError }}</div>
		{% endfor %}
		<h1>Réinitialiser mon mot de passe</h1>
		<div class="container-form">
			<div class="bloc-column">
				{{ form_start(requestForm) }}
				<p>
					Entrez votre adresse email, et nous vous enverrons un lien pour réinitialiser votre mot de passe.
				</p>
				<div class="bloc-ligne margin-0 constraints-messages">{{ form_row(requestForm.email) }}</div>
			</div>
			<div class="bloc-column">
				<button class="bouton width-100">Envoyer</button>
			</div>
			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}
