<div class="header-wrapper">
   <div class="header-panel">
      <a href="{{ path('home') }}">
         <div class="logo-panel">
            <div class="logo-image">
               <img src="{{ asset('images/logo_ba_6.png') }}" alt="logo blue angels">
            </div>
            <h1 class="logo-titre">
               {{ SiteName }}
            </h1>
         </div>
      </a>
   </div>

   {# ================= Menu ==================== #}
   <div id="burger">
      <div id="burgerBarre1"></div>
      <div id="burgerBarre2"></div>
      <div id="burgerBarre3"></div>
   </div>

   <nav class="theme-menu" id ="nav">
      <ul class="ulMenuGeneral">
         <li>
            <a href="{{ path('home') }}"
               class="
               {% if menu_courant is defined and menu_courant == 'home' %}
                  active
               {% endif %}">
               Accueil
            </a>
         </li>

         {# ======== Sous-menu /ON =========== #}
         <li>
            <button
               class="btDropdown"
               onclick="toggleMenu('menuDanses')">
               Danses
               <i class="fa fa-caret-down"></i>
            </button>
            <ul class="dropdown-content" id ="menuDanses">
               <li>
                  {# <a href="{{ path('article', {id: "479}) }}"> #}
                  <a href="{{ path('home') }}">
                        Salsa
                  </a>
               </li>
               <li>
                  <a href="{{ path('home') }}">
                     Bachata
                  </a>
               </li>
               <li>
                  <a href="{{ path('home') }}">
                     Chacha
                  </a>
               </li>
            </ul>
         </li>
         {# ======== Sous-menu /OFF =========== #}

         {# ======== Sous-menu /ON =========== #}
         <li>
            <button
               class="btDropdown"
               onclick="toggleMenu('menuEvenements')">
               Évènements
               <i class="fa fa-caret-down"></i>
            </button>
            <ul class="dropdown-content" id ="menuEvenements">
               <li>
                  <a href="{{ path('a_venir') }}">
                     À venir
                  </a>
               </li>
               <li>
                  <a href="{{ path('completed_events') }}">
                     Passés
                  </a>
               </li>
            </ul>
         </li>
         {# ======== Sous-menu /OFF =========== #}

         <li>
            <a href="{{ path('articles') }}"
               class="
               {% if menu_courant is defined and menu_courant == 'articles' %}
                  active
               {% endif %}">
               Articles
            </a>
         </li>
         
         <li>
            <a href="{{ path('home') }}"
               class="
               {% if menu_courant is defined and menu_courant == 'tarifs' %}
                  active
               {% endif %}">
               Tarifs
            </a>
         </li>

         <li>
            <a href="{{ path('home') }}"
               class="
               {% if menu_courant is defined and menu_courant == 'qui_sommes_nous' %}
                  active
               {% endif %}">
               À Propos
            </a>
         </li>

         <li>
            <a href="{{ path('home') }}"
               class="
               {% if menu_courant is defined and menu_courant == 'contact' %}
                  active
               {% endif %}">
               Contact
            </a>
         </li>

         {# ======== Sous-menu /ON =========== #}
         <li>
            <button
               class="btDropdown"
               onclick="toggleMenu('plus1')">
               PLus
               <i class="fa fa-caret-down"></i>
            </button>
            <ul class="dropdown-content" id ="plus1">
               <li>
                  <a href="{{ path('home') }}">
                     Plus 1
                  </a>
               </li>
               <li>
                  <a href="{{ path('home') }}">
                     Plus 2
                  </a>
               </li>
            </ul>
         </li>
         {# ======== Sous-menu /OFF =========== #}
         {% if app.user and app.user.roles[0] == "ROLE_ADMIN" %}
         
            <li>
               <a href="{{ path('admin') }}"
                  class="
                  {% if menu_courant is defined and menu_courant == 'admin' %}
                     active
                  {% endif %}">
                  <i class="fas fa-wrench fa-2x blue-pastel"></i>
               </a>
            </li>
         {% endif %}
         

         
      </ul>
   </nav>
</div> 