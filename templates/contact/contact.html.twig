{% extends 'components/base.html.twig' %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('css/formulaireGenerique.css') }}">
	<link rel="stylesheet" href="{{ asset('css/boutonsEtInputs.css') }}">
{% endblock %}

{% block title %}
	{{ SiteName }}: Contact
{% endblock %}


{% block body %}
	<div class="wrapper">
		<h1>
			Formulaire de contact
		</h1>
		<p class="center">(Tous les champs sont obligatoires)</p>

		<div class="container-form big-width">
			{{ form_start(contactForm) }}

			<div class="bloc-ligne">
				{{ form_row(contactForm.prenom) }}
				{{ form_row(contactForm.nom) }}
			</div>

			<div class="bloc-ligne">
				{{ form_row(contactForm.tel) }}
				{{ form_row(contactForm.email) }}
			</div>

			<div class="bloc-ligne">
				{{ form_row(contactForm.objet, {'value':champObjetPreRempli}) }}
				{{ form_row(contactForm.question) }}
				<label for="contact_question"><div>Répondez par le mot juste, en minuscules:</div>{{ labelDynamique }}</label>
			</div>

			{# Champs cachés pôt de miel pour les robots spameurs #}
			<div class="bloc-ligne">
				{{ form_row(contactForm.age) }}
				{{ form_row(contactForm.sexe) }}
				{{ form_row(contactForm.motivations) }}
			</div>
			
			<div class="bloc-ligne-message">
				{{ form_row(contactForm.message, {'value': champMessagePreRempli}) }}
			</div>



			<div class="bloc-ligne">
				<p class="consentementRgpd">
					<input type="checkbox" class="caseACocher" id="accordDonneesPerso">
					<label for="accordDonneesPerso">
						Je consens à la collecte de mes données personnelles dans le cadre de cette demande de contact.
					</label>
				</p>
			</div>

			<div class="bloc-ligne">
				{{ form_row(contactForm.envoyer,
                  {'attr':{'disabled':'disabled',
                  'class':'buttonDisabled',
                  'id':'contact_envoyer'
                  }}
				)
				}}
			</div>

			{{ form_end(contactForm) }}

			{% block javascript %}
				<script src="{{ asset('js/checkBoxRgpdFormulaireContact.js') }}"></script>
			{% endblock %}

		</div>
	{% endblock %}
